{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["es2017"],
        "types": ["lodash", "typed-screeps", "screeps-profiler"],
        "removeComments": true,
        "noEmitOnError": true,
        "noResolve": false,
        "experimentalDecorators": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true
    },
    "compileOnSave": false,
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
}